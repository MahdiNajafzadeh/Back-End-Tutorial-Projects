generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id       Int      @id @default(autoincrement())
  username String   @unique
  name     String
  email    String
  password String
  tokens   tokens[]
}

model tokens {
  id     Int      @id @default(autoincrement())
  userId Int
  secret String
  user   users    @relation(fields: [userId], references: [id])
}
